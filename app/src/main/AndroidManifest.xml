<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.merozmoreau.workoutengineer">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name_display"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/CustomAppTheme">
        <activity
            android:name=".controllers.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity android:name=".controllers.AlertDialogFragmentTwoButtons" />
        <activity android:name=".controllers.EditWorkoutActivity" />
        <activity android:name=".controllers.PerformWorkoutActivity" />
        <activity android:name=".controllers.SelectWorkoutActivity" />
        <activity android:name=".controllers.CreateWorkoutActivity" />
        <activity android:name=".controllers.SelectExercises" />
        <activity android:name=".utils.OptionsMenuGeneral" />
        <activity android:name=".controllers.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>