<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Theme">

        <SwitchPreferenceCompat
            app:key="theme"
            app:summaryOff="If you need more light in your life"
            app:summaryOn="The perfect choice for night owls"
            app:title="The theme the app will use" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Metric">
        <ListPreference
            app:title="Metric system"
            android:key="metric"
            android:defaultValue="metric"
            app:entries="@array/metric_entries"
            app:entryValues="@array/metric_values"
            app:useSimpleSummaryProvider="true"/>

    </PreferenceCategory>
</PreferenceScreen>